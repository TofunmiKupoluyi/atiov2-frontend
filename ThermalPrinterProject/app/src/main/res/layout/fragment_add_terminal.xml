<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EnterLoginFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Specify Terminal"/>

        <!--This is where the subterminals are added-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subterminal_layout">
            <!--THIS WAS ADDED CUS OF FOCUSING ISSUE-->
            <EditText
                android:id="@+id/main_terminal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint = "Terminal Name"
                android:paddingTop="30dp"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/main_terminal_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint = "Terminal Password"
                android:paddingTop="30dp"
                android:inputType="textPassword"
                android:maxLines="1"/>
        </LinearLayout>


        <Button
            android:id="@+id/add_terminal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Subterminal"/>

    </LinearLayout>
</ScrollView>